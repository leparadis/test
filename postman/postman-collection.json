      "name": "Integration Hub - Wallet API",
      "item": [
        {
          "name": "Debit - Success",
          "event": [
            {
              "listen": "prerequest",
              "script": {
                "exec": [
                  "const timestamp = Math.floor(Date.now() / 1000);",
                  "pm.environment.set('timestamp', timestamp);",
                  "const idempotencyKey = 'test-' + Date.now();",
                  "pm.environment.set('idempotency_key', idempotencyKey);",
                  "const payload = JSON.parse(pm.request.body.raw);",
                  "const refId = 'ref-' + Date.now();",
                  "payload.refId = refId;",
                  "pm.request.body.update(JSON.stringify(payload));",
                  "const payloadString = JSON.stringify(payload) + timestamp.toString();",
                  "const secret = pm.environment.get('hmac_secret');",
                  "// Use Web Crypto API for HMAC-SHA256",
                  "const key = await crypto.subtle.importKey(",
                  "    'raw',",
                  "    new TextEncoder().encode(secret),",
                  "    { name: 'HMAC', hash: 'SHA-256' },",
                  "    false,",
                  "    ['sign']",
                  ");",
                  "const signature_buffer = await crypto.subtle.sign('HMAC', key, new TextEncoder().encode(payloadString));",
                  "const signature = Array.from(new Uint8Array(signature_buffer))",
                  "    .map(b => b.toString(16).padStart(2, '0'))",
                  "    .join('');",
                  "pm.environment.set('signature', signature);"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Idempotency-Key",
                "value": "{{idempotency_key}}"
              },
              {
                "key": "X-Signature",
                "value": "{{signature}}"
              },
              {
                "key": "X-Timestamp",
                "value": "{{timestamp}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"playerId\": \"player-001\",\n  \"amountCents\": 1000,\n  \"currency\": \"USD\",\n  \"refId\": \"ref-placeholder\",\n  \"meta\": {\n    \"gameId\": \"game-123\",\n    \"roundId\": \"round-456\"\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}/wallet/debit",
              "host": ["{{base_url}}"],
              "path": ["wallet", "debit"]
            }
          },
          "response": []
        },
